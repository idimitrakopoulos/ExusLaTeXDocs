\newcommand\uc[5]{
	\tabularhead
	\addfield{ID:}{#1}
	\addfield{Version:}{v#2}	
	\addtitle{Use Case:}{#3}
	\addfield{Description:}{#4}	
	\additemizedfield{Actors:}{#5}
	
	\end{longtable}

}