	\renewcommand{\headrulewidth}{0pt}%
	\lhead{\includegraphics[height=5mm]{images/logo.png} \Huge \textcolor{exusred}{|}\normalsize \raisebox{0.6ex}[0pt][0pt]{#1}}
	\chead{}
	\rhead{}
	\lfoot{\raisebox{0.6ex}[0pt][0pt]{\textbf{\thepage}} \Huge \textcolor{exusred}{|} \normalsize \raisebox{0.6ex}[0pt][0pt]{#2}}
	\cfoot{}
	\rfoot{}
}